<style type="text/css">

  .red_btn {
    color: #BB2525;
    border-color: #BB2525;
  }

  .red_btn:hover {
    color: #fff;
    border-color: #BB2525;
    background-color: #BB2525;
  }

  .blue_btn {
    color: #5292DE;
    border-color: #5292DE;
  }

  .blue_btn:hover {
    color: #fff;
    border-color: #5292DE;
    background-color: #5292DE;
  }

  #brand-color {
    color: #8B5E3C;
  }

</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a id="brand-color" class="navbar-brand" href="<%= root_path %>"><b>Book</b><font color='black'>Shoppe</font></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item"><%= link_to 'Profile', user_path(current_user), class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to 'Trades', user_trades_path(current_user), class: 'nav-link' %></li>
      <% end %>
    </ul>

    <form method="GET" action="<%= books_path %>" class="form-inline my-2 my-lg-0">
      <input name="search" class="form-control mr-sm-2" type="search" placeholder="Find a book" aria-label="Search">
      <button class="btn blue_btn my-2 my-sm-0" type="submit">Search <i class="cui-magnifying-glass"></i></button>
    </form>

    <!-- Forgive me CSS gods, for I have sinned greatly. -->
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp

    <% if user_signed_in? %>
      <%= link_to 'Logout', logout_path, class: 'btn red_btn', method: :delete %>
    <% else %>
      <%= link_to 'Login', login_path, class: 'btn btn-outline-success' %>&nbsp &nbsp
      <%= link_to 'Sign Up', new_user_path, class: 'btn btn-outline-success' %>
    <% end %>
    
  </div>
</nav>