<style type="text/css">
  .logout{color:#BB2525;border-color:#BB2525}
  .logout:hover{color:#fff;background-color:#BB2525;border-color:#BB2525}

  .search{color:#5292DE;border-color:#5292DE}
  .search:hover{color:#fff;background-color:#5292DE;border-color:#5292DE}
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="<%= root_path %>">BookShoppe</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item"><%= link_to 'Profile', user_path(current_user), class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to 'Trades', user_trades_path(current_user), class: 'nav-link' %></li>
      <% end %>
    </ul>

    <form method="GET" action="<%= books_path %>" class="form-inline my-2 my-lg-0">
      <input name="search" class="form-control mr-sm-2" type="search" placeholder="Find a book" aria-label="Search">
      <button class="btn search my-2 my-sm-0" type="submit">Search</button>
    </form>&nbsp &nbsp

    <% if user_signed_in? %>
      <%= link_to 'Logout', logout_path, class: 'btn logout', method: :delete %>
    <% else %>
      <%= link_to 'Login', login_path, class: 'btn btn-outline-success' %>&nbsp &nbsp
      <%= link_to 'Sign up', new_user_path, class: 'btn btn-outline-success' %>
    <% end %>
    
  </div>
</nav>